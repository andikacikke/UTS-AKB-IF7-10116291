<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylight"
    android:orientation="vertical"
    tools:context=".Profil">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="270dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#55E4BD"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/wk"
                app:civ_border_color="#15E2E2"
                app:civ_border_width="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Dika Project"
                android:textColor="#0A0A0A"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:accessibilityHeading="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andika Dirgantara"
                    android:textColor="#55E4BD"
                    android:textSize="26sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:paddingTop="10dp"
                    android:text="INFORMATIKA-7"
                    android:textColor="@color/startblue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="360"
                    android:textColor="@color/startblue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

    <!-- Here starts scrolling - view all content -->



<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:paddingLeft="25dp">

<ImageView
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/ic_email_black_24dp"></ImageView>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingLeft="20dp"
    android:text="Andikadirgantara1@gmail.com"
    android:onClick="SendMa"
    android:textStyle="bold" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="25dp"
android:orientation="horizontal"
android:paddingLeft="25dp">

<ImageView
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/ic_phone_android_black_24dp"></ImageView>

<TextView
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingLeft="20dp"
    android:onClick="Call"
    android:text="+62291657642"
    android:textStyle="bold" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentStart="true"
android:layout_marginTop="25dp"
android:orientation="horizontal"
android:paddingLeft="25dp"
android:layout_alignParentLeft="true">

<ImageView
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/ic_menu_camera"></ImageView>

<TextView
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingLeft="20dp"
    android:text="Photographer"
    android:textStyle="bold" />
</LinearLayout>

    <!-- Line to separate items -->
<View
android:layout_width="fill_parent"
android:layout_height="1dp"
android:layout_marginTop="10dp"
android:background="#FFFFFF"
android:focusable="false" />

    </LinearLayout>


